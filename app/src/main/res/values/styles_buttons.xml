<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonThemes">
        <item name="cornerRadius">10dp</item>
        <item name="elevation">1dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ButtonThemes.Default" parent="ButtonThemes">
        <item name="android:backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonThemes.Transparent" parent="ButtonThemes">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonThemes.Disabled" parent="ButtonThemes">
        <item name="android:text">""</item>
        <item name="android:backgroundTint">@color/disabled_color</item>
        <item name="android:clickable">false</item>
    </style>
</resources>